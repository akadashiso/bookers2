<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model:@user, local:true do |f| %>
        <label for="inputName">Name</label></br>
        <%= f.text_field :name, autofocus: true, id:"inputName" %>

        <div class="form-group">
          <label for="user_image">Image</label>
          <input value="{}" data-reference="356056c8347c533bc361700c56d47723" type="hidden" name="user[profile_image]"><input class="form-control-file user_image" data-reference="356056c8347c533bc361700c56d47723" include_hidden="false" type="file" name="user[profile_image]" id="user_profile_image">
        </div>
        <div class="form-group">
          <label for="user_introduction">Introduction</label>
          <%= f.text_field :introduction, autofocus: true, id:"user_introduction" %>
          <!----以下は上の以前のコード>
          <!--<textarea class="form-control introduction" name="user[introduction]" id="user_introduction"></textarea>-->
        </div>
        <div class="form-group">
            <%= f.submit "Update User" %>
          <!--<input type="submit" name="commit" value="Update User" class="btn btn-secondary" data-disable-with="Update User">-->

        </div>
        </form>
        <% end %>
      </div>
</div>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>Editing Book</h1>

      <form>
        <div class="form-group">
          <%= form_with model: [@user, @book], local: true do |f| %>
          <%= f.label :title, "Title" %>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <%= f.label :body, "Opinion" %>
          <%= f.text_field :body %>
        </div>
        <div class="form-group">
          <%= f.submit "Create Book" %>
          <% end %>
        </div>
      </form>
    </div>
  </div>
</div>